<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="8dp"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:foreground="#00FFFFFF"
        android:background="@drawable/shape_click"
        tools:ignore="UselessParent">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome e sobrenome"
            android:drawableTint="@color/ColorPrimaryDark"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/nameLastName"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginVertical="7dp"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone e Fixo"
            android:textSize="14sp"
            android:singleLine="true"
            android:drawableTint="@color/ColorPrimaryDark"
            android:id="@+id/numberFix"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:ellipsize="end"
            android:drawableStart="@drawable/ic_baseline_call_24"
            android:drawablePadding="10dp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="E-mail"
            android:singleLine="true"
            android:drawableTint="@color/ColorPrimaryDark"
            android:layout_marginVertical="7dp"
            android:ellipsize="end"
            android:id="@+id/email"
            android:textStyle="bold"
            android:visibility="visible"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="10dp"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empresa / Escola"
            android:textSize="16sp"
            android:drawableTint="@color/ColorPrimaryDark"
            android:singleLine="true"
            android:layout_marginVertical="7dp"
            android:ellipsize="end"
            android:id="@+id/empresa"
            android:textStyle="bold"
            android:visibility="visible"
            android:drawableStart="@drawable/ic_baseline_home_repair_service_24"
            android:drawablePadding="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aniversário"
                android:drawableTint="@color/ColorPrimaryDark"
                android:textSize="16sp"
                android:layout_marginEnd="20dp"
                android:singleLine="true"
                android:layout_marginVertical="7dp"
                android:ellipsize="end"
                android:id="@+id/aniversario"
                android:textStyle="bold"
                android:visibility="visible"
                android:drawableStart="@drawable/ic_baseline_calendar_today_24"
                android:drawablePadding="10dp"
                />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gênero"
                android:singleLine="true"
                android:layout_marginVertical="7dp"
                android:ellipsize="end"
                android:textSize="16sp"
                android:id="@+id/genero"
                android:textStyle="bold"
                android:visibility="visible"
                android:drawableTint="@color/ColorPrimaryDark"
                android:drawableStart="@drawable/ic_sex"
                android:drawablePadding="10dp"
                />


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="7dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:text="@string/delete"
            android:id="@+id/delete"
            android:layout_weight="1"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/shape_button"
            tools:ignore="ButtonStyle" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:text="@string/update"
            android:layout_weight="1"
            android:id="@+id/update"
            android:layout_marginStart="5dp"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="@drawable/shape_button"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    </LinearLayout>



</RelativeLayout>